<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cannot_add_dialog_bg">
    <!--对话框标题区域-->
    <RelativeLayout
        android:id="@+id/cannot_add_dialog_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/cannot_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cannotAddDialog_info"
            android:textSize="14sp"
            android:textColor="@color/textColor"/>

    </RelativeLayout>

    <View
        android:id="@+id/cannot_add_split_line"
        android:layout_width="280dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/cannot_add_dialog_title"
        android:layout_marginBottom="0dp"
        android:background="@color/swipeLine"/>

    <!--对话框按钮-->
    <LinearLayout
        android:id="@+id/cannot_add_cancel_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cannot_add_split_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--取消按钮-->
        <Button
            android:id="@+id/cannot_add_OK_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_click"
            android:text="@string/cannotAddDialog_btn"
            android:textColor="#6699ff"
            android:textSize="16sp"
            android:foreground="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</RelativeLayout>