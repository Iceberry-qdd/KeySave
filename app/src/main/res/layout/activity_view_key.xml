<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        android:id="@+id/main_toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <ImageView
        android:id="@+id/viewKey_back"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/viewKeyActivity_title"
        android:textColor="@color/textColor"
        android:textSize="18sp" />
</RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorPrimary">



            <LinearLayout
                android:id="@+id/view_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/viewKey_showPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_password_hide" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/viewKey_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/viewKeyActivity_sort"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/viewKey_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/textView_sort"
                        android:layout_toRightOf="@id/textView_sort"
                        android:background="@null"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/viewKeyActivity_nickname"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/viewKey_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/textView_nickname"
                        android:layout_toRightOf="@id/textView_nickname"
                        android:background="@null"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_account"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/viewKeyActivity_account"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/viewKey_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/textView_account"
                        android:layout_toRightOf="@id/textView_account"
                        android:background="@null"
                        android:enabled="false"
                        android:inputType="text"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/textView_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:text="@string/viewKeyActivity_password"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/viewKey_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/textView_password"
                        android:layout_toRightOf="@id/textView_password"
                        android:background="@null"
                        android:enabled="false"
                        android:inputType="textPassword"
                        android:textColor="@color/textColor"
                        tools:ignore="LabelFor" />
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qrcode_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/viewKeyActivity_look"
                    android:textSize="16dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/qrcode_bg"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>
                <ImageView
                    android:id="@+id/qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="@string/viewKeyActivity_desp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp" />
            </RelativeLayout>


            </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>